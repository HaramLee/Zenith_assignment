@model IEnumerable<ZenithDataLib.Model.Activity>
@{ ViewBag.Title = "Activity Search"; }

<h2>@ViewBag.Title Results</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table>
    <tr>
        <th>Activity Name</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ActivityDec</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ActivityId })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.ActivityId })
            </td>
    </tr>
    }
</table>